@model CmsTools.Models.DataEditViewModel
@using CmsTools.Models

@{
    var title = "Sửa - " + (Model.Table.DisplayName ?? Model.Table.TableName);
    ViewData["Title"] = title;
    var backUrl = Url.Action("List", "Data", new { tableId = Model.Table.Id }) ?? "#";
}

<h2 class="mt-3 mb-3">@title</h2>

<div class="card">
    <div class="card-body">
        @Html.Partial("_EditForm", Model)
    </div>
</div>

<div class="mt-3">
    <a class="btn btn-secondary"
       href="@backUrl">
        Quay lại danh sách
    </a>
</div>
