@model CmsTools.Models.DataEditViewModel
@using System.Globalization
@using CmsTools.Models

@functions {
    bool IsTextArea(CmsColumnMeta col)
    {
        var name = (col.ColumnName ?? string.Empty).ToLowerInvariant();
        var dataType = (col.DataType ?? string.Empty).ToLowerInvariant();

        if (name.Contains("description") ||
            name.Contains("mo_ta") ||
            name.Contains("content") ||
            name.Contains("noi_dung") ||
            name.Contains("note") ||
            name.Contains("ghi_chu"))
            return true;

        if (dataType.Contains("text"))
            return true;

        if ((dataType.StartsWith("nvarchar") || dataType.StartsWith("varchar")) &&
            dataType.Contains("(max)"))
            return true;

        return false;
    }

    bool IsImageCol(CmsColumnMeta col)
    {
        var name = col.ColumnName ?? string.Empty;

        if (!string.IsNullOrEmpty(col.Format) &&
            col.Format.Equals("image", System.StringComparison.OrdinalIgnoreCase))
            return true;

        if (name.IndexOf("image", System.StringComparison.OrdinalIgnoreCase) >= 0 ||
            name.IndexOf("img", System.StringComparison.OrdinalIgnoreCase) >= 0 ||
            name.IndexOf("photo", System.StringComparison.OrdinalIgnoreCase) >= 0 ||
            name.IndexOf("avatar", System.StringComparison.OrdinalIgnoreCase) >= 0)
            return true;

        return false;
    }

    string InputTypeFor(CmsColumnMeta col)
    {
        var t = (col.DataType ?? string.Empty).ToLowerInvariant();

        if (t.StartsWith("bigint") ||
            t.StartsWith("int") ||
            t.StartsWith("smallint") ||
            t.StartsWith("tinyint") ||
            t.StartsWith("decimal") ||
            t.StartsWith("numeric"))
            return "number";

        if (t.StartsWith("datetime") || t.StartsWith("date"))
            return "text";

        return "text";
    }

    string? StepFor(CmsColumnMeta col)
    {
        var t = (col.DataType ?? string.Empty).ToLowerInvariant();
        if (t.StartsWith("decimal") || t.StartsWith("numeric"))
            return "0.01";

        if (t.StartsWith("tinyint") || t.StartsWith("smallint") || t.StartsWith("int") || t.StartsWith("bigint"))
            return "1";

        return null;
    }

    string GetValueText(CmsColumnMeta col, IDictionary<string, object?> values)
    {
        if (values == null) return string.Empty;

        if (!values.TryGetValue(col.ColumnName, out var v) || v == null || v is DBNull)
            return string.Empty;

        return v.ToString() ?? string.Empty;
    }
}


@{
    var title = "Sửa - " + (Model.Table.DisplayName ?? Model.Table.TableName);
    ViewData["Title"] = title;

    var pkName = Model.PrimaryKeyColumn;
    var pkValue = Model.PrimaryKeyValue;
}

<h2 class="mt-3 mb-3">@title</h2>

<form asp-action="Edit"
      asp-controller="Data"
      asp-route-tableId="@Model.Table.Id"
      asp-route-id="@pkValue"
      method="post">

    @Html.AntiForgeryToken()

    <!-- PK readonly -->
    <div class="mb-3">
        <label class="form-label">@pkName (PK)</label>
        <input type="text"
               class="form-control"
               value="@pkValue"
               readonly />
    </div>

    @foreach (var col in Model.Columns)
    {
        if (col.IsPrimary)
            continue;

        var label = col.DisplayName ?? col.ColumnName;
        var name = col.ColumnName;
        var currentText = GetValueText(col, Model.Values);
        var dataType = (col.DataType ?? string.Empty).ToLowerInvariant();

        if (!col.IsEditable)
        {
            <div class="mb-3">
                <label class="form-label">@label (readonly)</label>
                <input type="text"
                       class="form-control"
                       value="@currentText"
                       readonly />

                @if (!string.IsNullOrWhiteSpace(col.DefaultExpr))
                {
                    <div class="form-text">
                        default_expr: <code>@col.DefaultExpr</code>
                    </div>
                }
            </div>

            continue;
        }

        <div class="mb-3">
            <label class="form-label">@label</label>

            @if (IsTextArea(col))
            {
                <textarea name="@name"
                  class="form-control"
                  rows="3">@currentText</textarea>
            }
            @if (IsTextArea(col))
            {
                <textarea name="@name"
                  class="form-control"
                  rows="3">@currentText</textarea>
            }
            else
            {
                var inputType = InputTypeFor(col);
                var step = StepFor(col);

                if (IsImageCol(col))
                {
                    // Preview ảnh nếu đã có URL
                    if (!string.IsNullOrWhiteSpace(currentText))
                    {
                        <div class="mb-2">
                            <a href="@currentText" target="_blank" rel="noopener noreferrer">
                                <img src="@currentText"
                                     alt="preview"
                                     style="max-height:120px;max-width:100%;object-fit:contain;" />
                            </a>
                        </div>
                    }

                    // Ô nhập URL ảnh
                    <input name="@name"
                           class="form-control"
                           type="text"
                           value="@currentText" />

                    <small class="text-muted">
                        Dán URL ảnh (CDN / UploadImages.aspx) vào đây.
                    </small>
                }
                else
                {
                    <input name="@name"
                           class="form-control"
                           type="@inputType"
                           value="@currentText"
                           step="@(step ?? "")" />
                }
            }


            <div class="form-text">
                <small>
                    Kiểu: <code>@col.DataType</code>
                    @if (!string.IsNullOrWhiteSpace(col.Format))
                    {
                        @: | Format: <code>@col.Format</code>
                    }
                    @if (!string.IsNullOrWhiteSpace(col.DefaultExpr))
                    {
                        @: | default_expr: <code>@col.DefaultExpr</code>
                    }
                </small>
            </div>
        </div>
    }

    <button type="submit" class="btn btn-primary">Lưu</button>
    <a class="btn btn-secondary ms-2"
       href="@Url.Action("List", "Data", new { tableId = Model.Table.Id })">
        Quay lại
    </a>
</form>
