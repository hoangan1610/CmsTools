@model IEnumerable<CmsTools.Models.CmsRoleListItem>

@{
    ViewData["Title"] = "Roles";
}

<h2 class="mt-3 mb-3">Roles</h2>

@if (TempData["RolesMessage"] is string msg && !string.IsNullOrWhiteSpace(msg))
{
    <div class="alert alert-info">@msg</div>
}

<p class="mb-3">
    <a class="btn btn-success" href="@Url.Action("Create", "Roles")">
        Tạo role mới
    </a>
</p>

@if (Model == null || !Model.Any())
{
    <p class="text-muted">Chưa có role nào.</p>
}
else
{
    <div class="table-responsive">
        <table class="table table-sm table-bordered align-middle">
            <thead class="table-light">
                <tr>
                    <th style="width:70px;">ID</th>
                    <th style="width:180px;">Tên role</th>
                    <th>Mô tả</th>
                    <th style="width:100px;">Trạng thái</th>
                    <th style="width:110px;">Số user</th>
                    <th style="width:140px;">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var r in Model)
                {
                    <tr>
                        <td>@r.Id</td>
                        <td>@r.Name</td>
                        <td>@(r.Description ?? "")</td>
                        <td>
                            @if (r.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactive</span>
                            }
                        </td>
                        <td>@r.UserCount</td>
                        <td>
                            <a class="btn btn-sm btn-outline-primary"
                               href="@Url.Action("Edit", "Roles", new { id = r.Id })">
                                Sửa
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
