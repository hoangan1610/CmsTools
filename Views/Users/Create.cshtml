@model CmsTools.Models.CmsUserEditViewModel

@{
    ViewData["Title"] = "Tạo user mới";
}

<h2 class="mt-3 mb-3">Tạo user mới</h2>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @foreach (var err in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <div>@err.ErrorMessage</div>
        }
    </div>
}

<form asp-action="Create" asp-controller="Users" method="post">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label class="form-label">Username</label>
        <input class="form-control" name="Username" value="@Model.Username" />
    </div>

    <div class="mb-3">
        <label class="form-label">Họ tên</label>
        <input class="form-control" name="FullName" value="@(Model.FullName ?? "")" />
    </div>

    <div class="form-check mb-3">
        <input class="form-check-input"
               type="checkbox"
               id="IsActive"
               name="IsActive"
               @(Model.IsActive ? "checked" : "") />
        <label class="form-check-label" for="IsActive">
            Active
        </label>
    </div>

    <div class="mb-3">
        <label class="form-label">Password</label>
        <input type="password" class="form-control" name="Password" />
    </div>

    <div class="mb-3">
        <label class="form-label">Confirm password</label>
        <input type="password" class="form-control" name="ConfirmPassword" />
    </div>

    <div class="mb-3">
        <label class="form-label">Roles</label>

        @if (Model.Roles == null || Model.Roles.Count == 0)
        {
            <p class="text-muted mb-0">Chưa có role nào trong <code>tbl_cms_role</code>.</p>
        }
        else
        {
            <div class="row">
                @foreach (var r in Model.Roles)
                {
                    var checkedAttr = (Model.SelectedRoleIds != null &&
                    Model.SelectedRoleIds.Contains(r.Id))
                    ? "checked"
                    : "";

                    <div class="col-12 col-md-6">
                        <div class="form-check">
                            <input class="form-check-input"
                                   type="checkbox"
                                   name="SelectedRoleIds"
                                   value="@r.Id"
                                   id="role_@r.Id"
                                   @checkedAttr />

                            <label class="form-check-label" for="role_@r.Id">
                                @r.Name
                            </label>
                        </div>
                    </div>
                }
            </div>
        }
    </div>

    <button type="submit" class="btn btn-primary">Tạo</button>
    <a class="btn btn-secondary ms-2"
       href="@Url.Action("Index", "Users")">
        Hủy
    </a>
</form>
