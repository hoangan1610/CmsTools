@model IEnumerable<CmsTools.Models.CmsUserListItem>

@{
    ViewData["Title"] = "Users";
}

<h2 class="mt-3 mb-3">Users</h2>

@if (TempData["UsersMessage"] is string msg && !string.IsNullOrWhiteSpace(msg))
{
    <div class="alert alert-info">@msg</div>
}

<div class="d-flex flex-wrap align-items-center mt-3 mb-3">
    <a class="btn btn-success me-2 mb-2" href="@Url.Action("Create", "Users")">
        Tạo user mới
    </a>

    <a asp-controller="Users" asp-action="LoginLogs"
       class="btn btn-sm btn-outline-secondary mb-2">
        Xem login logs gần đây
    </a>
</div>

@if (Model == null || !Model.Any())
{
    <p class="text-muted">Chưa có user nào trong <code>tbl_cms_user</code>.</p>
}
else
{
    <div class="table-responsive">
        <table class="table table-sm table-bordered align-middle">
            <thead class="table-light">
                <tr>
                    <th style="width:70px;">ID</th>
                    <th>Username</th>
                    <th>Họ tên</th>
                    <th style="width:100px;">Trạng thái</th>
                    <th>Roles</th>
                    <th style="width:180px;">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var u in Model)
                {
                    <tr>
                        <td>@u.Id</td>
                        <td>@u.Username</td>
                        <td>@(u.FullName ?? "")</td>
                        <td>
                            @if (u.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactive</span>
                            }
                        </td>
                        <td>
                            @if (!string.IsNullOrWhiteSpace(u.Roles))
                            {
                                var parts = u.Roles.Split(',', StringSplitOptions.RemoveEmptyEntries);
                                foreach (var r in parts)
                                {
                                    <span class="badge role-badge me-1">@r.Trim()</span>

                                }
                            }
                            else
                            {
                                <span class="text-muted">(none)</span>
                            }
                        </td>

                        <td class="text-nowrap">
                            <div class="dropdown">
                                <button class="btn btn-sm btn-light border btn-action dropdown-toggle"
                                        type="button"
                                        data-bs-toggle="dropdown"
                                        aria-expanded="false"
                                        title="Thao tác">
                                    <i class="bi bi-three-dots-vertical"></i>
                                </button>

                                <ul class="dropdown-menu dropdown-menu-end shadow-sm">
                                    <li>
                                        <a class="dropdown-item" href="@Url.Action("Edit", "Users", new { id = u.Id })">
                                            <i class="bi bi-pencil-square me-2"></i>Sửa
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="@Url.Action("ChangePassword", "Users", new { id = u.Id })">
                                            <i class="bi bi-key me-2"></i>Đổi mật khẩu
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider" /></li>
                                    <li>
                                        <form method="post" asp-controller="Users" asp-action="ToggleActive" asp-route-id="@u.Id" class="px-2">
                                            @Html.AntiForgeryToken()
                                            @if (u.IsActive)
                                            {
                                                <button type="submit" class="dropdown-item text-danger btn-linklike">
                                                    <i class="bi bi-lock-fill me-2"></i>Khoá user
                                                </button>
                                            }
                                            else
                                            {
                                                <button type="submit" class="dropdown-item text-success btn-linklike">
                                                    <i class="bi bi-unlock-fill me-2"></i>Mở khoá user
                                                </button>
                                            }
                                        </form>
                                    </li>
                                </ul>
                            </div>
                        </td>



                    </tr>
                }
            </tbody>
        </table>
    </div>
}
<style>
    .table-responsive {
        overflow-x: auto;
        overflow-y: visible;
    }

    .btn-action {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 36px;
        height: 30px;
        border-radius: 10px;
    }

        .btn-action.dropdown-toggle::after {
            display: none !important;
        }

    .dropdown-menu {
        z-index: 2000;
        border-radius: 12px;
        padding: .35rem;
    }

    .dropdown-item {
        border-radius: 10px;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: .4rem;
    }

    .btn-linklike {
        background: transparent;
        border: 0;
        width: 100%;
        text-align: left;
        padding: .25rem .75rem;
    }

    .role-badge {
        background: #f1f5f9;
        color: #0f172a;
        border: 1px solid #e2e8f0;
        font-weight: 600;
    }

    @@media (max-width:576px) {
        td.text-nowrap {
            white-space: normal !important;
        }
    }
</style>

@section Scripts {
    <script>
        // đảm bảo dropdown trong table-responsive không bị "kẹt"
        document.querySelectorAll('button[data-bs-toggle="dropdown"]').forEach(btn => {
          bootstrap.Dropdown.getOrCreateInstance(btn, {
            popperConfig: { strategy: 'fixed' }
          });
        });
    </script>
}


