@model IEnumerable<CmsTools.Models.CmsUserListItem>

@{
    ViewData["Title"] = "Users";
}

<h2 class="mt-3 mb-3">Users</h2>

@if (TempData["UsersMessage"] is string msg && !string.IsNullOrWhiteSpace(msg))
{
    <div class="alert alert-info">@msg</div>
}

<div class="d-flex flex-wrap align-items-center mt-3 mb-3">
    <a class="btn btn-success me-2 mb-2" href="@Url.Action("Create", "Users")">
        Tạo user mới
    </a>

    <a asp-controller="Users" asp-action="LoginLogs"
       class="btn btn-sm btn-outline-secondary mb-2">
        Xem login logs gần đây
    </a>
</div>

@if (Model == null || !Model.Any())
{
    <p class="text-muted">Chưa có user nào trong <code>tbl_cms_user</code>.</p>
}
else
{
    <div class="table-responsive">
        <table class="table table-sm table-bordered align-middle">
            <thead class="table-light">
                <tr>
                    <th style="width:70px;">ID</th>
                    <th>Username</th>
                    <th>Họ tên</th>
                    <th style="width:100px;">Trạng thái</th>
                    <th>Roles</th>
                    <th style="width:180px;">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var u in Model)
                {
                    <tr>
                        <td>@u.Id</td>
                        <td>@u.Username</td>
                        <td>@(u.FullName ?? "")</td>
                        <td>
                            @if (u.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactive</span>
                            }
                        </td>
                        <td>
                            @if (!string.IsNullOrWhiteSpace(u.Roles))
                            {
                                var parts = u.Roles.Split(',', StringSplitOptions.RemoveEmptyEntries);
                                foreach (var r in parts)
                                {
                                    <span class="badge bg-secondary me-1">@r.Trim()</span>
                                }
                            }
                            else
                            {
                                <span class="text-muted">(none)</span>
                            }
                        </td>

                        <td>
                            <a class="btn btn-sm btn-outline-primary me-1"
                               href="@Url.Action("Edit", "Users", new { id = u.Id })">
                                Sửa
                            </a>

                            <a class="btn btn-sm btn-outline-warning me-1"
                               href="@Url.Action("ChangePassword", "Users", new { id = u.Id })">
                                Đổi mật khẩu
                            </a>

                            <form method="post"
                                  asp-controller="Users"
                                  asp-action="ToggleActive"
                                  asp-route-id="@u.Id"
                                  class="d-inline">
                                @Html.AntiForgeryToken()
                                @if (u.IsActive)
                                {
                                    <button type="submit" class="btn btn-sm btn-outline-danger">
                                        Khoá
                                    </button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-sm btn-outline-success">
                                        Mở khoá
                                    </button>
                                }
                            </form>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
}
