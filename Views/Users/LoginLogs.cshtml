@model IReadOnlyList<CmsTools.Models.CmsLoginLogItem>

@{
    ViewData["Title"] = "Recent Login Logs";
}

<h2 class="mt-3 mb-3">Recent Login Logs</h2>

<p class="text-muted">
    Hiển thị các lần đăng nhập gần đây (mặc định 200 dòng mới nhất).
</p>

@if (Model == null || Model.Count == 0)
{
    <p class="text-muted">Chưa có dữ liệu login log.</p>
}
else
{
    <div class="table-responsive">
        <table class="table table-sm table-bordered align-middle">
            <thead class="table-light">
                <tr>
                    <th style="width:60px;">ID</th>
                    <th style="width:170px;">Thời gian</th>
                    <th>Username</th>
                    <th style="width:90px;">Kết quả</th>
                    <th style="width:130px;">IP</th>
                    <th>Message</th>
                    <th>User-Agent</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var log in Model)
                {
                    var rowClass = log.IsSuccess ? "" : "table-danger";

                    <tr class="@rowClass">
                        <td>@log.Id</td>
                        <td>
                            @log.CreatedAtUtc.ToLocalTime().ToString("dd/MM/yyyy HH:mm")
                            <br />
                            <small class="text-muted">UTC: @log.CreatedAtUtc.ToString("yyyy-MM-dd HH:mm")</small>
                        </td>
                        <td>
                            @log.Username
                            @if (log.CmsUserId.HasValue)
                            {
                                <br />
                                <small class="text-muted">UserId: @log.CmsUserId.Value</small>
                            }
                        </td>
                        <td>
                            @if (log.IsSuccess)
                            {
                                <span class="badge bg-success">Success</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Fail</span>
                            }
                        </td>
                        <td>@log.Ip</td>
                        <td>@log.Message</td>
                        <td>
                            <span title="@log.UserAgent">@log.UserAgent</span>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
