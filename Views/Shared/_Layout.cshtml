<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - CMS Tools</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        /* ====== Small UI polish (không phá css cũ) ====== */
        .cms-navbar .nav-link {
            display: flex;
            align-items: center;
            gap: .45rem;
        }

        .cms-navbar .dropdown-menu {
            min-width: 230px;
        }

        .cms-navbar .dropdown-header {
            font-size: .72rem;
            letter-spacing: .12em;
            text-transform: uppercase;
            color: #6c757d;
        }

        .cms-navbar .dropdown-item {
            display: flex;
            align-items: center;
            gap: .5rem;
        }

        .cms-navbar .nav-link .bi {
            opacity: .92;
        }

        .cms-navbar .navbar-brand {
            display: flex;
            align-items: center;
            gap: .5rem;
        }

            .cms-navbar .navbar-brand .brand-dot {
                width: 10px;
                height: 10px;
                border-radius: 999px;
                background: #ff7b32;
                box-shadow: 0 0 0 3px rgba(255,123,50,.18);
            }

        .cms-topbar {
            padding: 10px 16px;
            border-bottom: 1px solid rgba(255,255,255,.08);
            background: rgba(0,0,0,.04);
        }

            .cms-topbar .breadcrumb {
                margin: 0;
            }

            .cms-topbar .breadcrumb-item a {
                text-decoration: none;
            }

        .cms-topbar-title {
            font-weight: 800;
            margin: 0;
        }

        .cms-badge-live {
            font-weight: 800;
            letter-spacing: .04em;
        }
        @@media (max-width: 992px) {
            .cms-topbar

        {
            padding: 10px 12px;
        }

        }
    </style>

    @RenderSection("Styles", required: false)
</head>

<body class="cms-body">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark cms-navbar">
            <div class="container-fluid">
                @{
                    var isAdmin = User?.HasClaim("cms_is_admin", "1") ?? false;
                }

                <a class="navbar-brand fw-semibold" asp-controller="Home" asp-action="Index">
                    <span class="brand-dot"></span>
                    <span>CMS Tools</span>
                </a>

                <button class="navbar-toggler" type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#cmsNavbar"
                        aria-controls="cmsNavbar"
                        aria-expanded="false"
                        aria-label="Mở menu">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="cmsNavbar">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        @if (isAdmin)
                        {
                            <!-- ===== VẬN HÀNH ===== -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#"
                                   id="navOps" role="button"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-gear-wide-connected"></i>
                                    Vận hành
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navOps">
                                    <li class="dropdown-header">Đơn hàng</li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Orders" asp-action="Live">
                                            <i class="bi bi-broadcast-pin"></i>
                                            Đơn mới (Realtime)
                                            <span class="ms-auto badge rounded-pill bg-danger cms-badge-live">LIVE</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Reports" asp-action="ReorderSuggest">
                                            <i class="bi bi-box-seam"></i>
                                            Gợi ý nhập hàng
                                        </a>
                                    </li>

                                    <li><hr class="dropdown-divider" /></li>
                                    <li class="dropdown-header">Hệ thống</li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Health" asp-action="Connections">
                                            <i class="bi bi-activity"></i>
                                            Tình trạng kết nối
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Audit" asp-action="Index">
                                            <i class="bi bi-shield-check"></i>
                                            Nhật ký hệ thống (Audit)
                                        </a>
                                    </li>
                                </ul>
                            </li>

                            <!-- ===== NỘI DUNG ===== -->
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Articles" asp-action="Index">
                                    <i class="bi bi-journal-text"></i>
                                    Bài viết
                                </a>
                            </li>

                            <!-- ===== BÁO CÁO ===== -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#"
                                   id="navReports" role="button"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-graph-up-arrow"></i>
                                    Báo cáo
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navReports">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Reports" asp-action="Revenue">
                                            <i class="bi bi-currency-exchange"></i>
                                            Doanh thu
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Reports" asp-action="ReorderSuggest">
                                            <i class="bi bi-box2-heart"></i>
                                            Gợi ý nhập hàng
                                        </a>
                                    </li>
                                </ul>
                            </li>

                            <!-- ===== QUẢN TRỊ ===== -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#"
                                   id="navAdmin" role="button"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-shield-lock"></i>
                                    Quản trị
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navAdmin">
                                    <li class="dropdown-header">Cấu hình</li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Connections" asp-action="Index">
                                            <i class="bi bi-plug"></i>
                                            Kết nối CSDL
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Schema" asp-action="Index">
                                            <i class="bi bi-diagram-3"></i>
                                            Lược đồ (Schema)
                                        </a>
                                    </li>

                                    <li><hr class="dropdown-divider" /></li>
                                    <li class="dropdown-header">Phân quyền</li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Permissions" asp-action="Index">
                                            <i class="bi bi-person-check"></i>
                                            Quyền theo vai trò
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Permissions" asp-action="Tables">
                                            <i class="bi bi-table"></i>
                                            Quyền theo bảng
                                        </a>
                                    </li>

                                    <li><hr class="dropdown-divider" /></li>
                                    <li class="dropdown-header">Người dùng</li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Users" asp-action="Index">
                                            <i class="bi bi-people"></i>
                                            Danh sách người dùng
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Users" asp-action="LoginLogs">
                                            <i class="bi bi-clock-history"></i>
                                            Lịch sử đăng nhập
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }
                    </ul>

                    <ul class="navbar-nav ms-auto">
                        @if (User?.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item d-flex align-items-center">
                                <span class="navbar-text me-2 small text-nowrap">
                                    <i class="bi bi-person-circle me-1"></i>
                                    @User.Identity!.Name
                                </span>
                            </li>
                            <li class="nav-item">
                                <form class="d-inline" method="post" asp-controller="Account" asp-action="Logout">
                                    <button type="submit" class="btn btn-sm btn-outline-light">
                                        <i class="bi bi-box-arrow-right me-1"></i> Đăng xuất
                                    </button>
                                </form>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>

        <!-- (Tuỳ chọn) Topbar nhỏ: breadcrumb + title nếu ViewData có -->
        @{
            var pageTitle = (ViewData["Title"] as string) ?? "";
        }
        <div class="cms-topbar">
            <div class="container-fluid">
                <div class="d-flex flex-wrap align-items-center justify-content-between gap-2">
                    <div class="d-flex flex-column">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb breadcrumb-dark">
                                <li class="breadcrumb-item">
                                    <a asp-controller="Home" asp-action="Index">Trang chủ</a>
                                </li>
                                @* View nào muốn thêm breadcrumb thì tự RenderSection("Breadcrumb") *@
                                @RenderSection("Breadcrumb", required: false)
                            </ol>
                        </nav>
                        @if (!string.IsNullOrWhiteSpace(pageTitle))
                        {
                            <h6 class="cms-topbar-title">@pageTitle</h6>
                        }
                    </div>

                    @* chỗ này có thể để search/global actions sau *@
                    @RenderSection("TopbarActions", required: false)
                </div>
            </div>
        </div>
    </header>

    @{
        int? currentTableId = null;

        if (Context.Request.RouteValues.TryGetValue("tableId", out var tblRoute)
        && int.TryParse(tblRoute?.ToString(), out var tid1))
        {
            currentTableId = tid1;
        }
        else
        {
            var q = Context.Request.Query["tableId"].ToString();
            if (int.TryParse(q, out var tid2)) currentTableId = tid2;
        }
    }

    <!-- FLEX SHELL -->
    <div class="cms-shell">
        <aside class="cms-sidebar-col">
            <div class="cms-sidebar">
                @await Component.InvokeAsync("SchemaTree", new { currentTableId = currentTableId })
            </div>
        </aside>

        <main role="main" class="cms-main">
            @RenderBody()
        </main>
    </div>

    @inject IConfiguration Configuration
    <script>
        window.__HAFOOD_API = "@(Configuration["CmsTools:HAFoodApiBaseUrl"] ?? "")";
        window.__HAFOOD_API_KEY = "@(Configuration["CmsTools:HAFoodApiKey"] ?? "")";
    </script>

    <!-- ✅ GLOBAL CMS MODAL (DUY NHẤT 1 CÁI) -->
    <div class="modal fade" id="cmsModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-xl modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header py-2">
                    <h5 class="modal-title" id="cmsModalTitle">Hộp thoại</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
                </div>
                <div class="modal-body" id="cmsModalBody">
                    <div class="text-center text-muted small p-3">Đang tải...</div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
