<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - CMS_Tools</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    @RenderSection("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                @{
                    var isAdmin = User?.HasClaim("cms_is_admin", "1") ?? false;
                }

                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    CMS_Tools
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#cmsNavbar"
                        aria-controls="cmsNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="cmsNavbar">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        @if (isAdmin)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Permissions" asp-action="Index">
                                    Quyền bảng
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Roles" asp-action="Index">
                                    Roles
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Audit" asp-action="Index">
                                    Audit log
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Schema" asp-action="Index">
                                    Schema
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Users" asp-action="Index">
                                    Users
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Connections" asp-action="Index">
                                    Connections
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Health" asp-action="Connections">
                                    Health
                                </a>
                            </li>
                        }
                    </ul>

                    <ul class="navbar-nav ms-auto">
                        @if (User?.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item">
                                <span class="navbar-text me-2">
                                    @User.Identity!.Name
                                </span>
                            </li>
                            <li class="nav-item">
                                <form class="d-inline" method="post" asp-controller="Account" asp-action="Logout">
                                    <button type="submit" class="btn btn-sm btn-outline-light">
                                        Đăng xuất
                                    </button>
                                </form>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <div class="row">
            <!-- SIDEBAR -->
            <div class="col-12 col-md-3 col-lg-2 border-end p-0" style="min-height: calc(100vh - 56px);">
                @{
                    int? currentTableId = null;

                    // Thử lấy từ route
                    if (Context.Request.RouteValues.TryGetValue("tableId", out var tblRoute) &&
                    int.TryParse(tblRoute?.ToString(), out var tid1))
                    {
                        currentTableId = tid1;
                    }
                    else
                    {
                        // Hoặc từ query string
                        var q = Context.Request.Query["tableId"].ToString();
                        if (int.TryParse(q, out var tid2))
                        {
                            currentTableId = tid2;
                        }
                    }
                }

                @await Component.InvokeAsync("SchemaTree", new { currentTableId = currentTableId })
            </div>

            <!-- MAIN CONTENT -->
            <main role="main" class="col-12 col-md-9 col-lg-10 py-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
