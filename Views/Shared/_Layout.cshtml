<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - CMS_Tools</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    @RenderSection("Styles", required: false)
</head>
<body class="cms-body">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark cms-navbar">
            <div class="container-fluid">
                @{
                    var isAdmin = User?.HasClaim("cms_is_admin", "1") ?? false;
                }

                <a class="navbar-brand fw-semibold" asp-controller="Home" asp-action="Index">
                    CMS_Tools
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#cmsNavbar"
                        aria-controls="cmsNavbar" aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="cmsNavbar">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        @if (isAdmin)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Schema" asp-action="Index">Schema</a>
                            </li>

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#"
                                   id="navPermissions" role="button"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    Quyền
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navPermissions">
                                    <li><a class="dropdown-item" asp-controller="Permissions" asp-action="Index">Quyền theo role</a></li>
                                    <li><a class="dropdown-item" asp-controller="Permissions" asp-action="Tables">Quyền theo bảng</a></li>
                                </ul>
                            </li>

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#"
                                   id="navUsers" role="button"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    Người dùng
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navUsers">
                                    <li><a class="dropdown-item" asp-controller="Users" asp-action="Index">Users</a></li>
                                    <li><a class="dropdown-item" asp-controller="Users" asp-action="LoginLogs">Login logs</a></li>
                                </ul>
                            </li>

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#"
                                   id="navSystem" role="button"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    Hệ thống
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navSystem">
                                    <li><a class="dropdown-item" asp-controller="Connections" asp-action="Index">Connections</a></li>
                                    <li><a class="dropdown-item" asp-controller="Audit" asp-action="Index">Audit log</a></li>
                                    <li><a class="dropdown-item" asp-controller="Health" asp-action="Connections">Health</a></li>
                                </ul>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Reports" asp-action="Revenue">📈 Báo cáo doanh thu</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link d-flex align-items-center" asp-controller="Orders" asp-action="Live">
                                    <span class="me-1">🔴 Đơn mới</span>
                                    <span class="badge rounded-pill bg-danger">LIVE</span>
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Articles" asp-action="Index">📝 Bài viết</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Reports" asp-action="ReorderSuggest">
                                    Gợi ý nhập hàng
                                </a>
                            </li>
                        }
                    </ul>

                    <ul class="navbar-nav ms-auto">
                        @if (User?.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item d-flex align-items-center">
                                <span class="navbar-text me-2 small text-nowrap">@User.Identity!.Name</span>
                            </li>
                            <li class="nav-item">
                                <form class="d-inline" method="post" asp-controller="Account" asp-action="Logout">
                                    <button type="submit" class="btn btn-sm btn-outline-light">Đăng xuất</button>
                                </form>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    @{
        int? currentTableId = null;

        if (Context.Request.RouteValues.TryGetValue("tableId", out var tblRoute)
        && int.TryParse(tblRoute?.ToString(), out var tid1))
        {
            currentTableId = tid1;
        }
        else
        {
            var q = Context.Request.Query["tableId"].ToString();
            if (int.TryParse(q, out var tid2)) currentTableId = tid2;
        }
    }

    <!-- FLEX SHELL -->
    <div class="cms-shell">
        <aside class="cms-sidebar-col">
            <div class="cms-sidebar">
                @await Component.InvokeAsync("SchemaTree", new { currentTableId = currentTableId })
            </div>
        </aside>

        <main role="main" class="cms-main">
            @RenderBody()
        </main>
    </div>

    @inject IConfiguration Configuration
    <script>
        window.__HAFOOD_API = "@(Configuration["CmsTools:HAFoodApiBaseUrl"] ?? "")";
        window.__HAFOOD_API_KEY = "@(Configuration["CmsTools:HAFoodApiKey"] ?? "")";
    </script>

    <!-- ✅ GLOBAL CMS MODAL (DUY NHẤT 1 CÁI) -->
    <div class="modal fade" id="cmsModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-xl modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header py-2">
                    <h5 class="modal-title" id="cmsModalTitle">Modal</h5>
                    <button type="button" class="btn-close"
                            data-bs-dismiss="modal"
                            aria-label="Close"></button>
                </div>
                <div class="modal-body" id="cmsModalBody">
                    <div class="text-center text-muted small p-3">Đang tải...</div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
