@model CmsTools.Models.HomeDashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
}

<h2 class="mt-3 mb-3">Dashboard</h2>

@if (Model.IsAdmin)
{
    <div class="row mb-3">
        <div class="col-md-3 col-sm-6 mb-3">
            <div class="card border-primary">
                <div class="card-body">
                    <h6 class="card-title text-muted">Connections</h6>
                    <p class="display-6 mb-0">@Model.ActiveConnections / @Model.TotalConnections</p>
                    <small class="text-muted">active / total</small>
                </div>
            </div>
        </div>

        <div class="col-md-3 col-sm-6 mb-3">
            <div class="card border-success">
                <div class="card-body">
                    <h6 class="card-title text-muted">Tables</h6>
                    <p class="display-6 mb-0">@Model.EnabledTables / @Model.TotalTables</p>
                    <small class="text-muted">enabled / total</small>
                </div>
            </div>
        </div>

        <div class="col-md-3 col-sm-6 mb-3">
            <div class="card border-warning">
                <div class="card-body">
                    <h6 class="card-title text-muted">Audit 24h gần nhất</h6>
                    <p class="display-6 mb-0">@Model.AuditLast24h</p>
                    <small class="text-muted">log trong 24 giờ</small>
                </div>
            </div>
        </div>

        @if (Model.FirstTableIdForUser.HasValue)
        {
            <div class="col-md-3 col-sm-6 mb-3">
                <div class="card border-info">
                    <div class="card-body">
                        <h6 class="card-title text-muted">Bảng dữ liệu</h6>
                        <p class="mb-2">Bảng đầu tiên bạn có quyền xem.</p>
                        <a class="btn btn-sm btn-outline-info"
                           href="@Url.Action("List", "Data", new { tableId = Model.FirstTableIdForUser.Value })">
                            Mở bảng
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>

    <h5 class="mt-4 mb-3">Liên kết nhanh</h5>
    <div class="list-group">
        <a class="list-group-item list-group-item-action"
           href="@Url.Action("Index", "Schema")">
            Quản lý Schema (Connections & Tables)
        </a>
        <a class="list-group-item list-group-item-action"
           href="@Url.Action("Index", "Users")">
            Quản lý Users
        </a>
        <a class="list-group-item list-group-item-action"
           href="@Url.Action("Index", "Roles")">
            Quản lý Roles
        </a>
        <a class="list-group-item list-group-item-action"
           href="@Url.Action("Index", "Permissions")">
            Phân quyền theo Role
        </a>
        <a class="list-group-item list-group-item-action"
           href="@Url.Action("Index", "Audit")">
            Xem Audit gần đây
        </a>
    </div>
}
else
{
    <div class="alert alert-info">
        Bạn không phải admin CMS.
    </div>

    @if (Model.FirstTableIdForUser.HasValue)
    {
        <p>
            Bạn có thể bắt đầu từ bảng đầu tiên bạn được cấp quyền xem:
        </p>
        <a class="btn btn-primary"
           href="@Url.Action("List", "Data", new { tableId = Model.FirstTableIdForUser.Value })">
            Mở bảng dữ liệu
        </a>
    }
    else
    {
        <p class="text-muted">
            Hiện tại tài khoản của bạn chưa được cấp quyền xem bảng nào.
            Vui lòng liên hệ admin để được phân quyền.
        </p>
    }
}
