@model CmsTools.Models.CmsOrderDetailViewModel
@using System.Globalization

@functions {
    string RenderOrderStatus(byte status)
    {
        return status switch
        {
            0 => "Mới tạo",
            1 => "Đã xác nhận",
            2 => "Đang giao",
            3 => "Đã giao",
            7 => "Đã nhận hàng",
            4 => "Đã huỷ",
            _ => "Không rõ"
        };
    }

    string OrderStatusBadgeClass(byte status)
    {
        return status switch
        {
            0 => "badge bg-secondary",  // Mới tạo
            1 => "badge bg-info",       // Đã xác nhận
            2 => "badge bg-primary",    // Đang giao
            3 => "badge bg-success",    // Đã giao
            7 => "badge bg-success",    // Đã nhận hàng
            4 => "badge bg-danger",     // Đã huỷ
            _ => "badge bg-secondary"
        };
    }

    string Money(decimal value, CultureInfo vi)
    {
        return value.ToString("N0", vi) + " đ";
    }
}


@{
    ViewData["Title"] = "Đơn hàng " + Model.OrderCode;
    var vi = CultureInfo.GetCultureInfo("vi-VN");
    var statusText = RenderOrderStatus(Model.Status);
    var statusClass = OrderStatusBadgeClass(Model.Status);
}

<h2 class="mt-3 mb-3">
    Đơn hàng @Model.OrderCode
</h2>

<div class="mb-3">
    <a class="btn btn-sm btn-outline-secondary me-2"
       href="javascript:history.back()">
        ← Quay lại
    </a>

    @* Quick-link ra front-end nếu có config *@
    @if (!string.IsNullOrWhiteSpace(Model.FrontendOrderUrl))
    {
        <a class="btn btn-sm btn-primary me-2"
           href="@Model.FrontendOrderUrl"
           target="_blank" rel="noopener">
            Xem trên HAFood
        </a>
    }

    @if (!string.IsNullOrWhiteSpace(Model.FrontendTimelineUrl))
    {
        <a class="btn btn-sm btn-outline-primary"
           href="@Model.FrontendTimelineUrl"
           target="_blank" rel="noopener">
            Timeline đơn hàng
        </a>
    }
</div>

<div class="row mb-3">
    <div class="col-md-6">
        <div class="card mb-3">
            <div class="card-header">
                Thông tin giao hàng
            </div>
            <div class="card-body">
                <p><strong>Khách hàng:</strong> @(Model.UserFullName ?? Model.ShipName)</p>
                <p><strong>Điện thoại KH:</strong> @(Model.UserPhone ?? "-")</p>
                <p><strong>Người nhận:</strong> @Model.ShipName</p>
                <p><strong>Điện thoại nhận:</strong> @Model.ShipPhone</p>
                <p>
                    <strong>Địa chỉ giao hàng:</strong><br />
                    @Model.ShipFullAddress
                </p>
                @if (!string.IsNullOrWhiteSpace(Model.AddressLabel))
                {
                    <p><strong>Label address:</strong> @Model.AddressLabel</p>
                }
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card mb-3">
            <div class="card-header">
                Thanh toán & trạng thái
            </div>
            <div class="card-body">
                <p class="mb-2">
                    <strong>Trạng thái đơn:</strong>
                    <span class="@statusClass">@statusText (@Model.Status)</span>
                </p>

                <p class="mb-1"><strong>Payment status:</strong> @(Model.PaymentStatus ?? "-")</p>
                <p class="mb-1"><strong>Provider:</strong> @(Model.PaymentProvider ?? "-")</p>
                <p class="mb-1"><strong>Payment ref:</strong> @(Model.PaymentRef ?? "-")</p>

                <hr />
                <p class="mb-1"><strong>Đặt lúc:</strong> @(Model.PlacedAt?.ToString("dd/MM/yyyy HH:mm") ?? "-")</p>
                <p class="mb-1"><strong>Confirm:</strong> @(Model.ConfirmedAt?.ToString("dd/MM/yyyy HH:mm") ?? "-")</p>
                <p class="mb-1"><strong>Shipped:</strong> @(Model.ShippedAt?.ToString("dd/MM/yyyy HH:mm") ?? "-")</p>
                <p class="mb-1"><strong>Delivered:</strong> @(Model.DeliveredAt?.ToString("dd/MM/yyyy HH:mm") ?? "-")</p>
                <p class="mb-1"><strong>Cancelled:</strong> @(Model.CanceledAt?.ToString("dd/MM/yyyy HH:mm") ?? "-")</p>

                <hr />
                <p class="mb-1"><strong>Tạm tính:</strong> @Money(Model.SubTotal, vi)</p>
                <p class="mb-1"><strong>Giảm giá:</strong> @Money(Model.DiscountTotal, vi)</p>
                <p class="mb-1"><strong>Phí ship:</strong> @Money(Model.ShippingTotal, vi)</p>
                <p class="mb-1"><strong>VAT:</strong> @Money(Model.VatTotal, vi)</p>
                <p class="fw-bold mb-2"><strong>Thanh toán:</strong> @Money(Model.PayTotal, vi)</p>

                <hr />
                <h6 class="mb-2">Cập nhật trạng thái đơn</h6>

                @using (Html.BeginForm(
                                "ChangeStatus",
                                "Orders",
                                FormMethod.Post,
                                new { id = "frmOrderStatus", data_cms_ajax = "true", onsubmit = "return cmsOrderStatusSubmit(this);" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.Hidden("id", Model.Id)

                    <div class="row g-2 align-items-end">
                        <div class="col-md-4">
                            <label class="form-label small">Trạng thái mới</label>
                            <select name="newStatus" class="form-select form-select-sm">
                                @if (Model.Status == 0)
                                {
                                    <option value="0" selected>Giữ nguyên - Mới tạo</option>
                                    <option value="1">Xác nhận đơn</option>
                                    <option value="4">Huỷ đơn</option>
                                }
                                else if (Model.Status == 1)
                                {
                                    <option value="1" selected>Giữ nguyên - Đã xác nhận</option>
                                    <option value="2">Đang giao</option>
                                    <option value="4">Huỷ đơn</option>
                                }
                                else if (Model.Status == 2)
                                {
                                    <option value="2" selected>Giữ nguyên - Đang giao</option>
                                    <option value="3">Đã giao</option>
                                }
                                else if (Model.Status == 3)
                                {
                                    <option value="3" selected>Giữ nguyên - Đã giao</option>
                                    <option value="7">Đã nhận hàng</option>
                                }
                                else if (Model.Status == 7)
                                {
                                    <option value="7" selected>Đã nhận hàng (không đổi)</option>
                                }
                                else if (Model.Status == 4)
                                {
                                    <option value="4" selected>Đã huỷ (không đổi)</option>
                                }
                                else
                                {
                                    <option value="@Model.Status" selected>Giữ nguyên (@Model.Status)</option>
                                }
                            </select>

                        </div>

                        <div class="col-md-8">
                            <label class="form-label small">
                                Ghi chú nội bộ / lý do huỷ
                            </label>
                            <textarea name="note"
                                  class="form-control form-control-sm"
                                  rows="2"
                                  placeholder="Ví dụ: KH yêu cầu huỷ, địa chỉ không liên hệ được, ..."></textarea>
                            <div class="form-text">
                                Nên nhập lý do khi huỷ đơn để sau này tra cứu.
                            </div>
                        </div>
                    </div>

                    <div class="mt-2 text-end">
                        <button type="submit" class="btn btn-sm btn-primary">
                            Lưu trạng thái
                        </button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<h4>Danh sách sản phẩm</h4>

@if (Model.Items == null || !Model.Items.Any())
{
    <p class="text-muted">Đơn hàng không có item.</p>
}
else
{
    <div class="table-responsive">
        <table class="table table-sm table-bordered align-middle">
            <thead class="table-light">
                <tr>
                    <th style="width:50px;">#</th>
                    <th>SKU</th>
                    <th>Sản phẩm</th>
                    <th style="width:80px;">Ảnh</th>
                    <th style="width:80px;" class="text-end">SL</th>
                    <th style="width:120px;" class="text-end">Đơn giá</th>
                    <th style="width:120px;" class="text-end">Thành tiền</th>
                </tr>
            </thead>
            <tbody>
                @{
                    var idx = 1;
                }
                @foreach (var it in Model.Items)
                {
                    <tr>
                        <td>@idx</td>
                        <td>@it.Sku</td>
                        <td>@(it.NameVariant ?? "")</td>
                        <td>
                            @if (!string.IsNullOrWhiteSpace(it.ImageVariant))
                            {
                                <a href="@it.ImageVariant" target="_blank" rel="noopener">
                                    <img src="@it.ImageVariant"
                                         style="max-height:40px;max-width:60px;object-fit:contain;" />
                                </a>
                            }
                        </td>
                        <td class="text-end">@it.Quantity</td>
                        <td class="text-end">@it.PriceVariant.ToString("N0", vi)</td>
                        <td class="text-end">@it.LineSubtotal.ToString("N0", vi)</td>
                    </tr>
                    idx++;
                }
            </tbody>
        </table>
    </div>
}

@section Scripts {
    <!-- Nếu Layout chưa có bootstrap bundle thì bật dòng này -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        function cmsShowToast(msg, ok) {
            const el = document.getElementById('cmsToast');
            const body = document.getElementById('cmsToastBody');
            if (!el || !body) return;

            body.textContent = msg || (ok ? 'Đã cập nhật.' : 'Có lỗi xảy ra.');

            // đổi màu theo trạng thái
            el.classList.remove('text-bg-dark', 'text-bg-success', 'text-bg-danger');
            el.classList.add(ok ? 'text-bg-success' : 'text-bg-danger');

            const t = bootstrap.Toast.getOrCreateInstance(el, { delay: 1800 });
            t.show();
        }

        function cmsOrderStatusSubmit(form) {
            if (!form.checkValidity()) return false;

            const submitBtn = form.querySelector('button[type="submit"]');
            if (submitBtn) submitBtn.disabled = true;

            const fd = new FormData(form);
            const url = form.action || '@Url.Action("ChangeStatus", "Orders")';

            fetch(url, {
                method: 'POST',
                body: fd,
                headers: { 'X-Requested-With': 'XMLHttpRequest' }
            })
            .then(async (r) => {
                let data = null;
                try { data = await r.json(); } catch { }

                if (!r.ok) {
                    const msg = (data && (data.message || data.detail)) || 'Có lỗi khi cập nhật trạng thái.';
                    cmsShowToast(msg, false);
                    if (submitBtn) submitBtn.disabled = false;
                    return;
                }

                const ok = !!(data && data.ok);
                const msg = (data && data.message) ? data.message : (ok ? 'Đã cập nhật trạng thái.' : 'Không thể cập nhật.');

                cmsShowToast(msg, ok);

                if (ok) {
                    // ✅ reload nhẹ để cập nhật badge + dropdown đúng trạng thái mới
                    setTimeout(() => window.location.reload(), 700);
                } else {
                    if (submitBtn) submitBtn.disabled = false;
                }
            })
            .catch(err => {
                console.error(err);
                cmsShowToast('Có lỗi khi cập nhật trạng thái đơn hàng.', false);
                if (submitBtn) submitBtn.disabled = false;
            });

            return false; // chặn submit thường
        }
    </script>
}

<!-- ✅ Toast (Bootstrap 5) -->
<div class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 99999;">
    <div id="cmsToast"
         class="toast align-items-center text-bg-dark border-0"
         role="alert" aria-live="assertive" aria-atomic="true">
        <div class="d-flex">
            <div class="toast-body" id="cmsToastBody">
                ...
            </div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto"
                    data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
    </div>
</div>
