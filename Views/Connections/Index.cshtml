@model IReadOnlyList<CmsTools.Models.CmsConnectionEditModel>

@{
    ViewData["Title"] = "Kết nối DB";
}

<h2 class="mt-3 mb-3">Kết nối DB</h2>

@if (TempData["ConnMessage"] is string msg && !string.IsNullOrWhiteSpace(msg))
{
    <div class="alert alert-success">@msg</div>
}

<p>
    <a class="btn btn-sm btn-success"
       asp-controller="Connections" asp-action="Edit">
        + Thêm connection
    </a>
</p>

@if (Model == null || Model.Count == 0)
{
    <p class="text-muted">Chưa có connection nào trong CmsToolsDb.</p>
}
else
{
    <div class="table-responsive">
        <table class="table table-sm table-bordered align-middle">
            <thead class="table-light">
                <tr>
                    <th style="width:60px;">ID</th>
                    <th>Tên</th>
                    <th>Provider</th>
                    <th>Connection string</th>
                    <th style="width:100px;">Trạng thái</th>
                    <th style="width:220px;"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var c in Model)
                {
                    <tr>
                        <td>@c.Id</td>
                        <td>@c.Name</td>
                        <td>@c.Provider</td>
                        <td>
                            <code style="font-size:0.8rem;">
                                @c.ConnString
                            </code>
                        </td>
                        <td>
                            @if (c.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactive</span>
                            }
                        </td>
                        <td class="text-end">
                            <a class="btn btn-sm btn-outline-primary"
                               asp-controller="Connections" asp-action="Edit"
                               asp-route-id="@c.Id">
                                Sửa
                            </a>

                            <form asp-controller="Connections"
                                  asp-action="ToggleActive"
                                  method="post"
                                  class="d-inline ms-1">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@c.Id" />
                                <button type="submit"
                                        class="btn btn-sm btn-outline-warning">
                                    @(c.IsActive ? "Tắt" : "Bật")
                                </button>
                            </form>

                            <a class="btn btn-sm btn-outline-secondary ms-1"
                               asp-controller="Schema" asp-action="Index">
                                Xem schema
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
