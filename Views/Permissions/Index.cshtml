@model IReadOnlyList<CmsTools.Models.RoleListItem>

@{
    ViewData["Title"] = "Quyền theo role";
}

<h2 class="mt-3 mb-3">Quyền theo role</h2>

@if (TempData["PermMessage"] is string msg && !string.IsNullOrWhiteSpace(msg))
{
    <div class="alert alert-success">@msg</div>
}

@if (Model == null || Model.Count == 0)
{
    <p class="text-muted">Chưa có role nào trong hệ thống (tbl_cms_role trống).</p>
}
else
{
    <div class="table-responsive">
        <table class="table table-sm table-bordered align-middle">
            <thead class="table-light">
                <tr>
                    <th style="width:60px;">ID</th>
                    <th>Tên role</th>
                    <th>Mô tả</th>
                    <th style="width:120px;">Số user</th>
                    <th style="width:160px;">Bảng có quyền</th>
                    <th style="width:140px;"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var r in Model)
                {
                    <tr>
                        <td>@r.Id</td>
                        <td>@r.Name</td>
                        <td>@(r.Description ?? "")</td>
                        <td>@r.UserCount</td>
                        <td>@r.TablePermCount</td>
                        <td class="text-end">
                            <a class="btn btn-sm btn-outline-primary"
                               asp-controller="Permissions"
                               asp-action="Edit"
                               asp-route-roleId="@r.Id">
                                Sửa quyền
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
