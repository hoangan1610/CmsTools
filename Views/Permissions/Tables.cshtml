@model CmsTools.Models.PermissionTableIndexViewModel

@{
    ViewData["Title"] = "Permissions theo bảng";
}

<h2 class="mt-3 mb-3">Permissions theo bảng</h2>

<form method="get" class="row g-2 mb-3">
    <div class="col-12 col-md-3">
        <label class="form-label small">Connection</label>
        <select name="connectionId" class="form-select form-select-sm">
            <option value="">-- Tất cả --</option>
            @foreach (var c in Model.Connections)
            {
                var selected = Model.ConnectionId.HasValue && Model.ConnectionId.Value == c.Id;
                <option value="@c.Id" selected="@(selected ? "selected" : null)">
                    @c.Name
                </option>
            }
        </select>
    </div>

    <div class="col-12 col-md-4">
        <label class="form-label small">Tìm theo schema/table/display</label>
        <input name="q"
               class="form-control form-control-sm"
               value="@(Model.Search ?? "")" />
    </div>

    <div class="col-12 col-md-3 align-self-end">
        <button type="submit" class="btn btn-primary btn-sm me-2">Lọc</button>
        <a class="btn btn-outline-secondary btn-sm"
           href="@Url.Action("Tables", "Permissions")">
            Xoá lọc
        </a>
    </div>
</form>

<div class="table-responsive">
    <table class="table table-sm table-bordered align-middle">
        <thead class="table-light">
            <tr>
                <th>Connection</th>
                <th>Schema.Table</th>
                <th>Display name</th>
                <th style="width:160px;">Trạng thái</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Items == null || Model.Items.Count == 0)
            {
                <tr>
                    <td colspan="4" class="text-center text-muted">
                        Không có bảng nào.
                    </td>
                </tr>
            }
            else
            {
                foreach (var t in Model.Items)
                {
                    var trClass = t.HasViewRole ? "" : "table-warning";

                    <tr class="@trClass">
                        <td>@t.ConnectionName</td>
                        <td><code>@t.SchemaName.@t.TableName</code></td>
                        <td>@(t.DisplayName ?? t.TableName)</td>
                        <td>
                            @if (t.HasViewRole)
                            {
                                <span class="badge bg-success">Ít nhất 1 role có CanView</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">
                                    Bảng "mồ côi" (chưa role nào có CanView)
                                </span>
                            }
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
